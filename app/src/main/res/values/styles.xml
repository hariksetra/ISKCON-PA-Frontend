<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Anthracite_grey</item>
        <item name="colorPrimaryDark">@color/Medium_Grey</item>
        <item name="colorAccent">@color/Ultra_Light_Grey_1</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>

    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlActivated">@color/Anthracite_grey</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="btnClose" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginTop">@dimen/dialogue_btnCLOSE_marginTop</item>
        <item name="android:textSize">@dimen/dialogue_btnCLOSE_textSize</item>
        <item name="android:paddingRight">@dimen/dialogue_btnCLOSE_paddingRight</item>
        <item name="android:paddingBottom">@dimen/dialogue_btnCLOSE_paddingBottom</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/Anthracite_grey</item>
    </style>

    <style name="dialogueTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">@dimen/dialogueTitlePrimaryTextpaddingLeft</item>
        <item name="android:paddingRight">@dimen/dialogueTitlePrimaryTextpaddingRight</item>
        <item name="android:textSize">@dimen/dialogueTitlePrimaryTextSize</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">@dimen/dialogue_btnCLOSE_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/dialogue_btnCLOSE_marginTop
        </item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/Anthracite_grey</item>
    </style>

    <style name="login_checkbox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/AppWhite</item>
        <item name="colorControlNormal">@color/AppWhite</item>
        <item name="colorControlHighlight">@color/AppWhite</item>
        <item name="colorControlActivated">@color/Life_Brown</item>
        <item name="buttonTint">@color/AppWhite</item>
    </style>

</resources>
